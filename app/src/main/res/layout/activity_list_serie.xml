<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bcc.unifal.emserie.ListSerie"
    android:background="@color/colorBackground"
    android:textAlignment="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/listaSeries"
        android:layout_alignParentEnd="true"
        android:background="#000000"></FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Series"
        android:textColor="@color/bg_color"
        android:id="@+id/Series"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listaSeries"
        android:background="@color/bg_color"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/Series"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="250dp" />

    <ImageView
        android:id="@+id/imageSerie"
        android:layout_width="205dp"
        android:layout_height="238dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Series" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:id="@+id/Adicionar"
        android:textColor="@color/bg_color"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nomeSerie"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_color"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nomeSerie"
        android:layout_alignTop="@+id/imageSerie"
        android:layout_alignEnd="@+id/listaSeries"
        android:layout_toEndOf="@+id/imageSerie" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/bg_color"
        android:id="@+id/button"
        android:layout_above="@+id/Adicionar"
        android:layout_toEndOf="@+id/imageSerie"
        android:onClick="openHome" />

</RelativeLayout>
